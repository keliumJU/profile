@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1 class="text-2xl text-red-400 mb-5 font-bold">Counter</h1>

<p class="text-lg font-normal mb-2" role="status">Current count: <span class="font-bold">@currentCount</span></p>

<button class="bg-gray-300 hover:bg-gray-400 rounded-lg p-3 cursor-pointer max-w-40 font-medium" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
