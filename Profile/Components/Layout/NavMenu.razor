@rendermode InteractiveServer

<div class="w-full">
    <nav class="flex flex-row items-center justify-center w-full gap-10 relative text-white z-[0] font-bold">
        <NavLink class="mr-auto text-xl rounded-full hover:shadow-white hover:shadow-2xl flex flex-row items-center" href="" Match="NavLinkMatch.All">
            <img class="max-w-[130px] aspect-auto" src="logo.svg"/>
        </NavLink>
        <div class="hidden md:flex flex-row w-full justify-center gap-x-10 max-w-[757px]">
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="dsa">
                DSA
            </NavLink>
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="research">
                Research
            </NavLink>
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="projects">
                Projects
            </NavLink>
        </div>

        <a class="hidden md:block ml-auto text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="https://github.com/keliumJU" target="_blank">About</a>

        <button @onclick="HandleClick" class="block md:hidden p-3 hover:cursor-pointer bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]"><img class="w-7 h-7 invert" src="icons/bars-4.svg" /></button>

        <div class="absolute bg-gradient-to-r from-[#fe0100] to-[rgba(194,115,120,0.836)] z-[-1] w-full h-[52px]"></div>
    </nav>
    <nav class="@styleVisibility w-auto md:hidden bg-gradient-to-r from-[#fe0100] to-[rgba(194,115,120,0.836)] text-white font-bold mx-5">
        <div class="flex flex-col w-full justify-center gap-y-5">
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="dsa">
                DSA
            </NavLink>
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="research">
                Research
            </NavLink>
            <NavLink class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="projects">
                Projects
            </NavLink>
            <a class="text-xl p-3 bg-[#fe7f9d] hover:rounded-xl hover:inset-shadow-sm hover:inset-shadow-[#fac8fd] hover:shadow-2xl hover:shadow-[#fac8fd]" href="https://github.com/keliumJU" target="_blank">About</a>
        </div>
    </nav>
</div>

@code {
    private Boolean showMobilNav = false;
    private String styleVisibility = "hidden";
    private void HandleClick() {
        showMobilNav = !showMobilNav;
        if (showMobilNav) {
            styleVisibility = "flex";
        }else {
            styleVisibility = "hidden";
        }
    }
}
